{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"types": ["reflect-metadata"],
		"module": "commonjs",
		"target": "ES2020",
		"lib": [
			"ES2020"
		],
		"sourceMap": true,
		"rootDir": "src",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"isolatedModules": false,
		"experimentalDecorators": true,
		"typeRoots": [
			"./node_modules/@types"
		],
		"outDir": "./dist",
		"declaration": true,
		"declarationDir": "./dist"
	},
	"ts-node": {
		"files": true
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}